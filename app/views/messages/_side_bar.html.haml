.side-bar
  .side-bar__user-name
    .side-bar__user-name--top-items
      %h3.side-bar__user-name--top-items__name
        = current_user.name
      %ul.side-bar__user-name--top-items__icons
        %li.side-bar__user-name--top-items__icons__new-group
          = link_to new_group_path, class: "side-bar__btn" do
            = icon('far', 'edit')
        %li.side-bar__user-name--top-items__icons__edit-user
          = link_to edit_user_path(current_user), class: "side-bar__btn" do
            = icon('fas', 'cog')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__group
        = link_to group_messages_path(group.id) do
          %p.side-bar__group-list__group__group-name
            = group.name
          %p.side-bar__group-list__group__group-message
            = group.show_last_message
      