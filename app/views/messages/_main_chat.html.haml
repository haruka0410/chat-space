.main-chat
  .main-chat__group-info
    .main-chat__group-info__left-box
      .main-chat__group-info__left-box__current-group
        = @group.name
      .main-chat__group-info__left-box__member-list
        Memberï¼š
        - @group.users.each do |user|
          = user.name
    .main-chat__group-info__right-box
      = link_to edit_group_path(@group.id), class: "edit__btn" do
        Edit        
  .main-chat__message-list
    = render @messages
  .main-chat__message-form
    = form_for [@group, @message], html: { class: "new-message" } do |f|
      .input-box      
        = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'